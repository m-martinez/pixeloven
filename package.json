{
  "name": "pixeloven",
  "author": "Brian Gebel <brian@pixeloven.com>",
  "description": "Framework for build Client and Server JavaScript applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixeloven/pixeloven.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.0.0"
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*",
      "tools/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build-examples": "lerna run build --scope \"@examples/*\"",
    "clean": "lerna clean",
    "compile-examples": "lerna run compile --scope \"@examples/*\" && yarn linker",
    "compile-packages": "lerna run compile --scope \"@pixeloven/*\" && yarn linker",
    "compile-tools": "lerna run compile --scope \"@tools/*\" && yarn linker",
    "env:production": "lerna run env:production",
    "linker": "lerna link",
    "lint-examples": "lerna run lint --scope \"@examples/*\"",
    "lint-packages": "lerna run lint --scope \"@pixeloven/*\"",
    "lint-tools": "lerna run lint --scope \"@tools/*\"",
    "test-examples": "lerna run test --scope \"@examples/*\"",
    "test-packages": "lerna run test --scope \"@pixeloven/*\"",
    "test-tools": "lerna run test --scope \"@tools/*\"",
    "pretty": "lerna run pretty",
    "pretty:ts": "lerna run pretty:ts",
    "pretty:scss": "lerna run pretty:scss",
    "document-examples": "lerna run document --scope \"@examples/*\"",
    "document-packages": "lerna run document --scope \"@packages/*\"",
    "document-tools": "lerna run document --scope \"@tools/*\"",
    "deploy:docs": "po-gh-pages examples packages tools",
    "report-coverage": "cat ./**/**/coverage/lcov.info | codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linter": {
      "examples/**/*.{ts,tsx}": [
        "yarn pretty",
        "yarn pretty:ts",
        "yarn pretty:scss",
        "yarn lint",
        "git add"
      ],
      "packages/**/*.{scss,ts,tsx}": [
        "yarn pretty",
        "yarn pretty:ts",
        "yarn lint",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@pixeloven/gh-pages": "^5.0.0-alpha.0",
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "codecov": "3.1.0",
    "cz-lerna-changelog": "2.0.2",
    "husky": "1.3.1",
    "lerna": "3.8.0",
    "lint-staged": "8.1.0",
    "semantic-release": "15.13.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
